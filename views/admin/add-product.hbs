<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <form action="/admin/add-product" method="post" role="form" enctype="multipart/form-data">
                <legend>Add Product</legend>

                <div class="form-group">
                    <label for="first_name">Name</label>
                    <input type="text" class="form-control" name="Name" id="first_name" placeholder="Name">
                </div>

                <div class="form-group">
                    <label for="last_name">category</label>
                    <select id="category" name="category">
                        <option name='trending' value="trending">Trending</option>
                        <option name='birthday' value="birthday">Birthday</option>
                        <option name='flowers' value="flowers">Flowers</option>
                        <option name='cakes' value="cakes">Cakes</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="email">price</label>
                    <input type="number" class="form-control" name="price" id="email" placeholder="price">
                </div>

                <div class="form-group">
                    <label for="pw">Description</label>
                    <input type="text" class="form-control" name="Description" placeholder="Description" id="pw">
                </div>

                <div class="form-group">
                    <label for="">image</label>
                    <input type="file" class="form-control" name="image">
                </div>
                <input type="hidden" id="datetime" name="datetime">

                <button type=" submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
<script>
    const datetimeField = document.getElementById("datetime");
    const currentDatetime = new Date().toISOString();
    datetimeField.value = currentDatetime;
</script>